# Cell 1: Imports
import sys
sys.path.append('..')

import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
from sklearn.datasets import make_classification

from src.smart_smote_hashboost import SmartSMOTEHashBoost
from src.baseline_models import BaselineSMOTE, BaselineSMOTERUS
from src.evaluation import evaluate_model, compare_models
from src.utils import load_and_prepare_data

%matplotlib inline
sns.set_style('whitegrid')

# Cell 2: Create Dataset
print("Creating imbalanced dataset...")
X, y = make_classification(
    n_samples=1000,
    n_features=20,
    n_informative=15,
    n_classes=2,
    weights=[0.9, 0.1],
    random_state=42
)

X_train, X_test, y_train, y_test = load_and_prepare_data(X, y)

# Cell 3: Train Your Model
model = SmartSMOTEHashBoost(
    n_estimators=50,
    safety_threshold=0.7,
    verbose=True
)

model.fit(X_train, y_train)

# Cell 4: Evaluate
y_pred = model.predict(X_test)
y_proba = model.predict_proba(X_test)[:, 1]

results = evaluate_model(y_test, y_pred, y_proba, "Smart-SMOTE HashBoost")
print(results)

# Cell 5: Visualize Safety Scores
stats = model.get_training_stats()
safety_scores = stats['safety_scores']

plt.figure(figsize=(10, 6))
plt.hist(safety_scores, bins=30, edgecolor='black', alpha=0.7)
plt.axvline(model.safety_threshold, color='red', linestyle='--',
            label=f'Threshold = {model.safety_threshold}')
plt.xlabel('Safety Score')
plt.ylabel('Number of Synthetic Samples')
plt.title('Distribution of Safety Scores')
plt.legend()
plt.grid(True, alpha=0.3)
plt.savefig('../results/figures/safety_distribution.png', dpi=300)
plt.show()

print(f"Safe samples: {stats['safe_synthetic']}/{stats['total_synthetic']}")
